@model IEnumerable<FinancePlan.Models.Budget>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="BudgetTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Household.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetItem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Household.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.balance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BudgetType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BudgetItem)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }) |
                    @Html.ActionLink("New Transaction", "Create", "Transactions", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script>
        $('#BudgetTable').DataTable();
    </script>
}
